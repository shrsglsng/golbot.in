# Database Configuration
EXPAPP_MONGO_URL=mongodb://localhost:27017/golbot
EXPAPP_MONGO_LOCAL_URL=mongodb://localhost:27017/golbot-dev

# Server Configuration
EXPAPP_PORT=5000
NODE_ENV=development

# JWT Configuration
EXPAPP_JWT_SECRET=your-super-secret-jwt-key-here
EXPAPP_JWT_LIFETIME=7d

# SMS Service (2Factor)
SMS_SECRET_KEY=your-2factor-api-key-here
OTP_TEMPLATE_NAME=OTP1

# Payment Gateway
PAYMENT_CLIENT_ID=your-payment-client-id
PAYMENT_SECRET_KEY=your-payment-secret-key

# AWS S3 Configuration
AWS_SECRET_ID=your-aws-access-key-id
AWS_SECRET_KEY=your-aws-secret-access-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=ap-south-1

# Frontend URLs
FRONTEND_URL=http://localhost:3000
ADMIN_URL=http://localhost:3001

# Logging Configuration
LOG_TO_FILE=false
LOG_LEVEL=debug

# Security
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=true

# Development
DEBUG=golbot:*